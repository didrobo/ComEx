@{
    ViewBag.Title = "Archivos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css
{
    <link rel="stylesheet" href="~/Content/MenuContextualArchivos.css" />
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cargue de Ordenes de Compras</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12" id="DropZone">
        <h1>Seleccionar</h1>
        <div role="alert" id="Alerta" style="display: none"></div>
        <div id="lista"></div>
    </div>
</div>

@*Código html para crear el menú*@
<div id="MenuContextual">
    <ul>
        <li id="SubirCarpeta"><i class="glyphicon glyphicon-folder-close"></i>Subir Carpeta...</li>
        <li id="SubirArchivo"><i class="glyphicon glyphicon-file"></i>Subir Archivos...</li>
        <li id="CrearCarpeta"><i class="glyphicon glyphicon-folder-open"></i>Crear Carpeta...</li>
    </ul>
</div>

@section scripts
{
    <script src="~/Scripts/MenuContextualArchivos.js"></script>
}