    <!-- /.col-lg-12 -->
    <!-- Modal -->
    <div class="modal fade" id="modalCorrecciones" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Correcciones de DEX</h4>
                </div>
                <div class="modal-body">
                    <div id="messageCorreccion"></div>
                    <div id="divFormCorrecciones" style="display: none;">
                        <div class="row">
                            <input type="hidden" id="hfIntIdDEXCorrcions" />
                            <input type="hidden" id="hfIntIdDEX" />
                            <input type="hidden" id="hfOperacion" />

                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="varNmroDEX">DEX</label>
                                    <input class="form-control" type="text" id="varNmroDEX" required>
                                    <span class="field-validation-valid text-danger" id="valid_varNmroDEX"></span>
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="fecAprbcionDEX">F. DEX</label>
                                    <input class="form-control" type="date" id="fecAprbcionDEX" required>
                                    <span class="field-validation-valid text-danger" id="valid_fecAprbcionDEX"></span>
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="varNmroDEXCrrgdo">DEX Corregido</label>
                                    <input class="form-control" type="text" id="varNmroDEXCrrgdo" required>
                                    <span class="field-validation-valid text-danger" id="valid_varNmroDEXCrrgdo"></span>
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="fecAprbcionDEXCrrgdo">F. DEX Corregido</label>
                                    <input class="form-control" type="date" id="fecAprbcionDEXCrrgdo" required>
                                    <span class="field-validation-valid text-danger" id="valid_fecAprbcionDEXCrrgdo"></span>
                                </div>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-sm-8">
                                <div class="form-group">
                                    <label for="varRtaArchvoAdjnto">Ruta Archivo</label>
                                    <input class="form-control" type="text" id="varRtaArchvoAdjnto" required>
                                    <span class="field-validation-valid text-danger" id="valid_varRtaArchvoAdjnto"></span>
                                </div>
                            </div>

                            <div class="col-sm-4 text-right">
                                <br />
                                <button type="button" class="btn btn-danger" id="btnCancelarCorrecc">Cancelar</button>
                                <button type="button" class="btn btn-primary" id="btnGuardarCorrecc" data-loading-text="Guardando...">Guardar</button>
                            </div>
                        </div>
                    </div>
                    <div id="divTablaCorrecciones">
                        <div class="row">
                            <div class="col-sm-12" id="bodyModal">
                                <table class="table table-striped table-bordered table-hover display compact" id="table-correcciones" style="border-spacing: 0px; border-collapse: separate; width: 100%;"></table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
