
@{
    ViewBag.Title = "Impresión Masiva de Documentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css
{
    <link href="@Url.Content("~/bower_components/datatables/extensions/Buttons/css/buttons.bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/bower_components/datatables/extensions/ColReorder/css/colReorder.bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/bower_components/pages/impresion.masiva.css")" rel="stylesheet" type="text/css" />
}

<div class="row" id="page-hd">
    <div class="col-lg-12">
        <h4 class="page-header">Impresión Masiva de Documentos</h4>
    </div>
</div>

<div id="Mensaje">
</div>
@Html.Hidden("hdnPageOrigen", (object)ViewBag.pageOrigen)
<div id="Principal">

    <div class="row">
        <div class='col-sm-2'></div>
        <div class='col-sm-4'>
            <div class="form-group form-group-lg">
                <label for="cmbDex">DEX</label>
                <select id="cmbDex" name="cmbDex" class="form-control"></select>
                <span class="ocultar field-validation-valid text-danger" data-valmsg-for="cmbDex" data-valmsg-replace="true" id="valid_cmbDex">Debe seleccionar un DEX</span>
            </div>
        </div>
        <div class='col-sm-4'>
            <div class="form-group">
                <br />
                <button type="button" role="button" class="btn btn-lg btn-primary" id="btnProcesarImpresion" data-loading-text="Procesando los documentos...">Procesar</button>
            </div>
        </div>
        <div class='col-sm-2'></div>
    </div>
</div>

<div id="Informacion" class="ocultar">
    <div class="row">
        <div class="col-lg-12">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover display compact" style="border-spacing: 0px; border-collapse: separate; width: 100%;" id="table-impresionMasiva">
                    <thead></thead>
                    <tbody></tbody>
                    <tfoot></tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/bower_components/bootstrap-modal-wrapper/bootstrap.modal.wrapper.js"></script>
    <script src="~/bower_components/datatables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/bower_components/datatables/extensions/Buttons/js/jszip.js"></script>
    <script src="~/bower_components/datatables/extensions/Buttons/js/buttons.html5.min.js"></script>
    <script src="~/bower_components/datatables/extensions/ColReorder/js/dataTables.colReorder.min.js"></script>
    <script src="~/bower_components/datatables/extensions/FormFilter/js/dataTables.formFilter.js"></script>
    <script src="~/Scripts/pages/impresion.masiva.js"></script>
}
