
@{
    ViewBag.Title = "Crear Borrador del DEX";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="page-hd">
    <div class="col-lg-12">
        <h4 class="page-header">Crear Borrador del DEX</h4>
    </div>
</div>

<div id="Principal">
    <form id="formCrearBorradorDEX" method="post">
        <fieldset>
            <div class="row">
                <div class='col-sm-2'></div>
                <div class='col-sm-4'>
                    <div class="form-group form-group-lg">
                        <label for="cmbBorrador">Borrador DEX</label>
                        <select id="cmbBorrador" name="cmbBorrador" class="form-control"></select>
                        <span class="field-validation-valid text-danger" data-valmsg-for="cmbBorrador" data-valmsg-replace="true" id="valid_cmbBorrador"></span>
                    </div>
                </div>

                <div class='col-sm-4'>
                    <div class="form-group form-group-lg">
                        <label for="txtNumBorrador">Num. Borrador DEX</label>
                        <input id="txtNumBorrador" name="txtNumBorrador" class="form-control mayuscula" type="text" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="txtNumBorrador" data-valmsg-replace="true" id="valid_txtNumBorrador"></span>
                    </div>
                </div>
                <div class='col-sm-2'></div>
                </div>
            <div class="row">
                <div class='col-sm-2'></div>
                <div class='col-sm-4'>
                    <div class="form-group form-group-lg">
                        <label for="cmbComprador">Comprador</label>
                        <select id="cmbComprador" name="cmbComprador" class="form-control"></select>
                        <span class="field-validation-valid text-danger" data-valmsg-for="cmbComprador" data-valmsg-replace="true" id="valid_cmbComprador"></span>
                    </div>
                </div>

                <div class='col-sm-4'>
                    <div class="form-group form-group-lg">
                        <label for="cmbLote">Lote</label>
                        <select id="cmbLote" name="cmbLote" class="form-control" multiple="multiple"></select>
                        <span class="field-validation-valid text-danger" data-valmsg-for="cmbLote" data-valmsg-replace="true" id="valid_cmbLote"></span>
                    </div>
                </div>
                <div class='col-sm-2'></div>
            </div>
            <br />
            <div class="row">
                <div class='col-sm-12 text-center'>
                    <div class="form-group">
                        <button type="submit" role="button" class="btn btn-lg btn-primary" id="btnProcesarBorradorDEX" data-loading-text="Procesando borrador del DEX...">Procesar</button>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</div>

@section scripts
{
    <script src="~/Scripts/pages/crear.borrador.dex.js"></script>
}