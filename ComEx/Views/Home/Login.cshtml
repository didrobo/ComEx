@model ComEx.Context.tcUsuarios

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Iniciar Sesión</h3>
                </div>
                <div class="panel-body">
                    <form role="form" method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Usuario" name="varLgin" type="text" autofocus>
                                @Html.ValidationMessageFor(u => u.varLgin)
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="varPssword" type="password" value="">
                                @Html.ValidationMessageFor(u => u.varPssword)
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Recordarme
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <input type="submit" value="Login" class="btn btn-lg btn-success btn-block" />
                        </fieldset>
                    </form>
                </div>

                <div class="panel-footer">
                    @{
                        if (@ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Message
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>


