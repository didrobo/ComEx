@model ComEx.Context.tmPlanesCI

@{
    ViewBag.Title = "Crear Planes CI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css
{
    <link href="~/bower_components/bootstrap-select/css/bootstrap-select.min.css" media="all" rel="stylesheet" type="text/css" />
    <link href="~/bower_components/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" media="all" rel="stylesheet" type="text/css" />
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmTmPlanesCICrear" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="position: relative">
        <br />
        <h4>Planes CI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.intIdPlanCI, new { htmlAttributes = new { @class = "form-control" } })

            <div class="col-md-3">
                @Html.LabelFor(model => model.varCdPlanCI, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.varCdPlanCI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.varCdPlanCI, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(model => model.varDscrpcionPlanCI, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.varDscrpcionPlanCI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.varDscrpcionPlanCI, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(model => model.intIdImprtdorExprtdor, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.intIdImprtdorExprtdor, new SelectList(ViewBag.listExportador, "Value", "Text"), new { @class = "selectpicker show-tick show-menu-arrow form-control", data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.intIdImprtdorExprtdor, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(model => model.bitBloqueo, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.bitBloqueo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.bitBloqueo, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">

            <div class="col-md-3">
                @Html.LabelFor(model => model.FecPrsntcion, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.FecPrsntcion, new { htmlAttributes = new { @class = "form-control calendario" } })
                @Html.ValidationMessageFor(model => model.FecPrsntcion, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(model => model.FecFnalExprtcion, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.FecFnalExprtcion, new { htmlAttributes = new { @class = "form-control calendario" } })
                @Html.ValidationMessageFor(model => model.FecFnalExprtcion, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(model => model.FecFnalCmpras, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.FecFnalCmpras, new { htmlAttributes = new { @class = "form-control calendario" } })
                @Html.ValidationMessageFor(model => model.FecFnalCmpras, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Guardar" class="btn btn-success" id="btnGuardar" data-loading-text="Guardando..." />
                <a href="@Url.Action("Index", "tmPlanesCi")" class="btn btn-primary">Cancelar</a>
            </div>
        </div>

    </div>
}

@section scripts
{
    <script src="~/bower_components/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/bower_components/bootstrap-datetimepicker/js/moment.min.js"></script>
    <script src="~/bower_components/bootstrap-datetimepicker/js/moment-with-locales.js"></script>
    <script src="~/bower_components/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/pages/planesCI.js"></script>
}

