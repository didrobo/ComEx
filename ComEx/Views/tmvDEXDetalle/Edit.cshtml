@model ComEx.Context.tmvDEXDetalle

@{
    ViewBag.Title = "Editar Detalle DEX";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css
{
    <link href="~/bower_components/bootstrap-select/css/bootstrap-select.min.css" media="all" rel="stylesheet" type="text/css" />
    <link href="~/bower_components/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" media="all" rel="stylesheet" type="text/css" />
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmTmvDEXDetalleEditar" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <h4>Detalle DEX</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.intIdDEXDtlle)
        @Html.HiddenFor(model => model.intIdDEX)

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.varCdItem, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.varCdItem, new { htmlAttributes = new { @class = "form-control Numero" } })
                @Html.ValidationMessageFor(model => model.varCdItem, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.intIdCuadroInsmoPrdcto, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.intIdCuadroInsmoPrdcto, new SelectList(ViewBag.lstProducto, "Value", "Text"), new { @class = "selectpicker show-tick show-menu-arrow form-control", data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.intIdCuadroInsmoPrdcto, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.numCntdadExprtda, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.numCntdadExprtda, new { htmlAttributes = new { @class = "form-control Decimal" } })
                @Html.ValidationMessageFor(model => model.numCntdadExprtda, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.numVlorFOB, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.numVlorFOB, new { htmlAttributes = new { @class = "form-control Decimal" } })
                @Html.ValidationMessageFor(model => model.numVlorFOB, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.numPsoNto, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.numPsoNto, new { htmlAttributes = new { @class = "form-control Decimal" } })
                @Html.ValidationMessageFor(model => model.numPsoNto, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">

            <div class="col-md-2">
                @Html.LabelFor(model => model.numPsoBrto, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.numPsoBrto, new { htmlAttributes = new { @class = "form-control Decimal" } })
                @Html.ValidationMessageFor(model => model.numPsoBrto, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.numVlorReintrgro, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.numVlorReintrgro, new { htmlAttributes = new { @class = "form-control Decimal" } })
                @Html.ValidationMessageFor(model => model.numVlorReintrgro, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.numCntdadCnvrtir, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.numCntdadCnvrtir, new { htmlAttributes = new { @class = "form-control Decimal" } })
                @Html.ValidationMessageFor(model => model.numCntdadCnvrtir, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.numCntdadAdcional, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.numCntdadAdcional, new { htmlAttributes = new { @class = "form-control Decimal" } })
                @Html.ValidationMessageFor(model => model.numCntdadAdcional, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">

            <div class="col-md-12">
                @Html.LabelFor(model => model.varCmntriosDEX, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.varCmntriosDEX, new { htmlAttributes = new { @class = "form-control", @rows = "3" } })
                @Html.ValidationMessageFor(model => model.varCmntriosDEX, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Actualizar" class="btn btn-success" id="btnEditar" data-loading-text="Actualizando..." />
                <a href="@Url.Action("Index", "tmvDEXEncabezado")" class="btn btn-primary">Cancelar</a>
            </div>
        </div>
    </div>
}



@section scripts
{
    <script src="~/bower_components/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/bower_components/bootstrap-datetimepicker/js/moment.min.js"></script>
    <script src="~/bower_components/bootstrap-datetimepicker/js/moment-with-locales.js"></script>
    <script src="~/bower_components/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/pages/dex.detalle.js"></script>
}