@model ComEx.Context.tmInsumos

@{
    ViewBag.Title = "Crear Insumo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css
{
    <link href="~/bower_components/bootstrap-select/css/bootstrap-select.min.css" media="all" rel="stylesheet" type="text/css" />
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmTmInsumosCrear" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="position: relative">
        <br />
        <h4>Insumos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.intIdInsmo, new { htmlAttributes = new { @class = "form-control" } })

            <div class="col-md-2">
                @Html.LabelFor(model => model.varCdInsmo, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.varCdInsmo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.varCdInsmo, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.varDscrpcionInsmo, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.varDscrpcionInsmo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.varDscrpcionInsmo, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.intIdLnea, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.intIdLnea, new SelectList(ViewBag.listTipoMaterial, "Value", "Text"), new { @class = "selectpicker show-tick show-menu-arrow form-control", data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.intIdLnea, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.intIdPscionArnclria, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.intIdPscionArnclria, new SelectList(ViewBag.listPosArancelaria, "Value", "Text"), new { @class = "selectpicker show-tick show-menu-arrow form-control", data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.intIdPscionArnclria, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.intIdUndad, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.intIdUndad, new SelectList(ViewBag.listUnidad, "Value", "Text"), new { @class = "selectpicker show-tick show-menu-arrow form-control", data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.intIdUndad, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            
            <div class="col-md-2">
                @Html.LabelFor(model => model.intIdUndadDian, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.intIdUndadDian, new SelectList(ViewBag.listUnidad, "Value", "Text"), new { @class = "selectpicker show-tick show-menu-arrow form-control", data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.intIdUndadDian, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.intIdUndadCmpra, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.intIdUndadCmpra, new SelectList(ViewBag.listUnidad, "Value", "Text"), new { @class = "selectpicker show-tick show-menu-arrow form-control", data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.intIdUndadCmpra, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.intIdTpoCmpra, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.intIdTpoCmpra, new SelectList(ViewBag.listEstadoMercancia, "Value", "Text"), new { @class = "selectpicker show-tick show-menu-arrow form-control", data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.intIdTpoCmpra, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.LabelFor(model => model.numFctorMncmex, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.numFctorMncmex, new { htmlAttributes = new { @class = "form-control Decimal" } })
                @Html.ValidationMessageFor(model => model.numFctorMncmex, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Guardar" class="btn btn-success" id="btnGuardar" data-loading-text="Guardando..." />
                <a href="@Url.Action("Index", "tmInsumos")" class="btn btn-primary">Cancelar</a>
            </div>
        </div>

    </div>
}

@section scripts
{
    <script src="~/bower_components/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/Scripts/pages/insumos.js"></script>
}

